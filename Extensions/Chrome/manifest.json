{
    "name": "Socketify",
    "description": "Secure TCP/UDP Sockets API",
    "version": "2.0",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "96": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "nativeMessaging",
        "tabs",
        "*://*/*",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "socketify.js"
    ],
    "manifest_version": 2
}